<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>NextDestWeb</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <servlet>
    <description></description>
    <display-name>jspPersona</display-name>
    <servlet-name>jspPersona</servlet-name>
    <jsp-file>/WEB-INF/view/jspPersona.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>jspPersona</servlet-name>
    <url-pattern>WEB-INF/view/jPersona</url-pattern>
  </servlet-mapping>
  
  
  <!-- Spring configuration -->
  <servlet>
   <servlet-name>dispatcher</servlet-name>
   <servlet-class>
     org.springframework.web.servlet.DispatcherServlet
   </servlet-class>
   <init-param>
     <param-name>contextConfigLocation</param-name>
     <param-value>WEB-INF/spring/dispatcher-config.xml</param-value>
   </init-param>
   <load-on-startup>1</load-on-startup>
 </servlet>

 <servlet-mapping>
   <servlet-name>dispatcher</servlet-name>
   <url-pattern>/spring/*</url-pattern>
   <url-pattern>*.html</url-pattern>
   <url-pattern>*.jsp</url-pattern>
 </servlet-mapping>
 <!-- End Spring configuration  -->
</web-app>